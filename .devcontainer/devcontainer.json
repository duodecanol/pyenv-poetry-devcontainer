{
    "name": "poetry3-poetry-pyenv",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    // ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [6379],

    // ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "",

    // ðŸ‘‡ Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode",
                "donjayamanne.python-environment-manager",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "KevinRose.vsc-python-indent",
                "batisteo.vscode-django",
                "njpwerner.autodocstring",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "albert.TabOut",
                "streetsidesoftware.code-spell-checker", // Code spell Checke
                "mutantdino.resourcemonitor", // Resource Monitor
                "arcanis.vscode-zipfs", // Zip file peeker
                "mohsen1.prettify-json", // Prettify JSON data
                "IBM.output-colorizer", // Colorize your output/test logs
                "DavidAnson.vscode-markdownlint",
                // "ms-azuretools.vscode-docker", // Docker integration and linting
                "shardulm94.trailing-spaces", // Show trailing spaces
                "vscode-icons-team.vscode-icons", // Better file extension icons
                "Gruntfuggly.todo-tree" // Highlights TODO comments
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.autopep8Path": "/usr/local/py-utils/bin/autopep8",
                "python.formatting.blackPath": "/usr/local/py-utils/bin/black",
                "python.formatting.yapfPath": "/usr/local/py-utils/bin/yapf",
                "python.linting.banditPath": "/usr/local/py-utils/bin/bandit",
                "python.linting.flake8Path": "/usr/local/py-utils/bin/flake8",
                "python.linting.mypyPath": "/usr/local/py-utils/bin/mypy",
                "python.linting.pycodestylePath": "/usr/local/py-utils/bin/pycodestyle",
                "python.linting.pydocstylePath": "/usr/local/py-utils/bin/pydocstyle",
                "python.linting.pylintPath": "/usr/local/py-utils/bin/pylint",
                "python.testing.pytestPath": "/usr/local/py-utils/bin/pytest",
                "files.eol": "\n",
                "python.formatting.provider": "black",
                "python.formatting.blackArgs": ["--line-length", "100"],
                "editor.formatOnSave": false,
                "python.linting.lintOnSave": true,
                "python.linting.flake8Enabled": true,
                "python.linting.pylintArgs": [
                    "--load-plugins",
                    "pylint-flask",
                    "--line-length",
                    "100"
                ]
            }
        }
    },
    // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
    "features": {
        "ghcr.io/devcontainers/features/aws-cli:1": {
            "version": "latest"
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "upgradePackages": true,
            "packages": "curl,nano"
        },
        "ghcr.io/devcontainers-contrib/features/direnv-asdf:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/black:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/pylint:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/flake8:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/isort:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/mypy:2": {
            "version": "latest"
        },
        "ghcr.io/lukewiwa/features/shellcheck:0": {
            "version": "stable"
        },
        "ghcr.io/eliises/devcontainer-features/devcontainers-cli:1": {
            "version": "latest",
            "nodeVersion": "latest"
        }
    },
    // ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    "remoteUser": "vscode"
}
